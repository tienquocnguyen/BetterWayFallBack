
<!-- styling for a page -->
{{# each products}}
    <div class="card-deck"> <!-- can be changed to rows -->
        {{# each this}}
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="{{this.imagePath}}" alt="{{this.title}}">
                <div class="card-block">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <div class = "clearfix">
                        <div class = "price pull-left">${{this.price}}</div>
                        <a href="/personalcare/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add to Cart</a>
                    </div>
                </div>
        </div>
        {{/each}}
        </div>
        <br>
{{/each}}

